generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Sexo {
  Masculino
  Femenino
  Otro
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  name     String
  sexo     Sexo
  password String
  perfil   Perfil?
  tareas   Tarea[]
}

model Perfil {
  id     Int    @id @default(autoincrement())
  edad   Int
  bio    String
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Tarea {
  id        Int        @id @default(autoincrement())
  titulo    String
  userId    Int
  user      User       @relation(fields: [userId], references: [id])
  etiquetas Etiqueta[] @relation("TareasEtiquetas")
}

model Etiqueta {
  id     Int     @id @default(autoincrement())
  nombre String
  tareas Tarea[] @relation("TareasEtiquetas")
}
